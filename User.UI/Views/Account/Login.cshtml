@using User.UI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h4>Use una cuenta local para iniciar sesión.</h4>
                            @*<p>Enter your username and password to log on:</p>*@
                        </div>
                        @*<div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>*@
                    </div>
                    <div class="form-bottom">
                        <section id="loginForm">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
            {
                                @Html.AntiForgeryToken()
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label class="sr-only" for="username">Usuario</label>
                                    @Html.TextBoxFor(m => m.User, new { @class = "form-username form-control", @placeholder = "Usuario", @id = "username", @type = "text" })
                                    @Html.ValidationMessageFor(m => m.User, "", new { @class = "lead text-danger" })
                                    @*<input type="text" name="form-username" placeholder="Username..." class="form-username form-control" id="form-username">*@
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="password">Password</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-password form-control", @placeholder = "Contraseña", @id = "password", @type = "password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "lead text-danger" })
                                    @*<input type="password" name="form-password" placeholder="Password..." class="form-password form-control" id="form-password">*@
                                </div>
                                <input type="submit" value="Iniciar sesión" class="btn btn-success" />
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles
    {
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/form-elements.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.backstretch.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
}